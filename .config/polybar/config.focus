[bar/barfocus]
monitor = ${env:MONITOR}
width = 100%
height = 32
bottom = true

background = #CC39424f
foreground = #ffffff

line-color = ${bar/bottom.background}
line-size = 16

spacing = 1
padding-right = 3
padding-left = 2
module-margin = 2

font-0 = Monofur:weight=bold:size=10;3
font-1 = FuraMonoNerdFont:size=12;4
font-2 = Noto Sans CJK JP:weight=bold:size=10:antialias=true;3

modules-right = volume backlight wireless-network wired-network battery cpu memory date powermenu

[bar/barfocus2]
monitor = ${env:MONITOR}
width = 100%
height = ${bar/barfocus.height}
bottom = ${bar/barfocus.bottom}

foreground = ${bar/barfocus.foreground}
background = #99313842

line-color = ${bar/barfocus.background}
line-size = 16

spacing = 1
padding-right = 3
padding-left = 2
module-margin = 2

font-0 = Monofur:weight=bold:size=10;3
font-1 = FuraMonoNerdFont:size=12;3

modules-left = i3
modules-right = date

; vim:ft=dosini

